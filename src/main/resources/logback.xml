<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>web - %date [%thread] %-5level %logger{36} - %message%n
            </pattern>
        </encoder>
    </appender>

    <logger name="com.redhat.jbuenosv.demos.monitoring.knative.echo" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.demos.monitoring.knative.echo.application" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.demos.monitoring.knative.echo.application.command" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.demos.monitoring.knative.echo.application.exception" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.demos.monitoring.knative.echo.application.process" level="DEBUG" />
    <logger name="com.redhat.jbuenosv.demos.monitoring.knative.echo.infrastructure" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
